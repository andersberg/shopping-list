{
	"name": "shopping-list",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"build": "vite build",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"dev": "vite dev",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"preview": "vite preview",
		"preview:cf": "wrangler pages dev",
		"test": "npm run test:integration && npm run test:unit",
		"test:integration": "playwright test",
		"test:unit": "vitest",
		"cf:deploy": "wrangler pages deploy",
		"d1:local:execute": "wrangler d1 execute shopping-list --local",
		"d1:local:migrate": "wrangler d1 execute shopping-list --local",
		"d1:remote:execute": "wrangler d1 execute shopping-list --remote",
		"d1:remote:migrate": "wrangler d1 execute shopping-list --remote",
		"db:generate": "drizzle-kit generate",
		"deploy": "$npm_execpath run typecheck && $npm_execpath run build && $npm_execpath run cf:deploy",
		"typecheck": "tsc --noEmit",
		"typecheck:watch": "tsc --noEmit --watch"
	},
	"devDependencies": {
		"@playwright/test": "^1.28.1",
		"@sveltejs/adapter-auto": "^3.0.0",
		"@sveltejs/adapter-cloudflare": "^4.7.2",
		"@sveltejs/kit": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^4.0.0-next.6",
		"@types/eslint": "^9.6.0",
		"eslint": "^9.0.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.36.0",
		"globals": "^15.0.0",
		"prettier": "^3.1.1",
		"prettier-plugin-svelte": "^3.1.2",
		"svelte": "^5.0.0-next.1",
		"svelte-check": "^3.6.0",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.0.0",
		"vite": "^5.0.3",
		"vitest": "^2.0.0"
	},
	"type": "module"
}
